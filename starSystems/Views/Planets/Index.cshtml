@model starSystems.Models.PlanetsStarSystemViewModel
@* @model IEnumerable<starSystems.Models.Planets>
 *@
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Planets" asp-action="Index" method="get">
    <p>
        <select asp-for="PlanetStarSystem" asp-items="Model.starSystem">
            <option value="">All</option>
        </select>

        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Planets![0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planets![0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planets![0].StarId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planets![0].StarSystem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Planets!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StarId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StarSystem)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
